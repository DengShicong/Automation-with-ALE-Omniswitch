# 邮件发送配置
# Email Configuration

# SMTP服务器配置
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True

# 发送者邮箱配置
SENDER_EMAIL=
SENDER_PASSWORD=
SENDER_NAME=网络巡检系统

# 接收者邮箱配置
RECEIVER_EMAIL=
RECEIVER_NAME=系统管理员

# 抄送邮箱（可选，多个邮箱用逗号分隔）
CC_EMAILS=

# 密送邮箱（可选，多个邮箱用逗号分隔）
BCC_EMAILS=

# 邮件主题配置
EMAIL_SUBJECT_PREFIX=[网络巡检]
EMAIL_SUBJECT_TEMPLATE={prefix} {date} ALE设备巡检报告

# 邮件内容配置
EMAIL_TEMPLATE=html

# 附件配置
MAX_ATTACHMENT_SIZE=25  # MB
COMPRESS_ATTACHMENTS=True

# 其他配置
EMAIL_TIMEOUT=30  # 秒
EMAIL_RETRY_COUNT=3
EMAIL_RETRY_DELAY=5  # 秒

